<Window x:Class="HomeDMX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeDMX"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" >
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Slider Maximum="255" SmallChange="2" LargeChange="10" Margin="12,0" Value="{Binding DmxControllers[0].Value}" Orientation="Vertical"/>
            <Slider Maximum="255" SmallChange="2" LargeChange="10" Margin="12,0" Value="{Binding DmxControllers[1].Value}" Orientation="Vertical"/>
            <Slider Maximum="255" SmallChange="2" LargeChange="10" Margin="12,0" Value="{Binding DmxControllers[2].Value}" Orientation="Vertical"/>
            <Slider Maximum="255" SmallChange="2" LargeChange="10" Margin="12,0" Value="{Binding DmxControllers[3].Value}" Orientation="Vertical"/>
            <Slider Maximum="255" SmallChange="2" LargeChange="10" Margin="12,0" Value="{Binding DmxControllers[4].Value}" Orientation="Vertical"/>
        </StackPanel>
    </Grid>
</Window>
